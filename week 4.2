import numpy as np

def generate_sample_matrix(n):
    # Generate a random matrix with approximately half 0s and half 1s
    matrix = np.random.choice([0, 1], size=(n, n), p=[0.5, 0.5])
    
    return matrix

def main():
    num_samples = 10000
    
    n = int(input("Enter the value of n: "))
    
    determinant_zero_count = 0
    
    for _ in range(num_samples):
        sample_matrix = generate_sample_matrix(n)
        
        # Check if the determinant is 0
        if np.linalg.det(sample_matrix) == 0:
            determinant_zero_count += 1
    
    probability = determinant_zero_count / num_samples
    
    print(f"Probability of determinant being 0 for {num_samples} {n}x{n} matrices: {probability}")

if __name__ == "__main__":
    main()
